#!/usr/bin/env python

Import("env")

_generate_fastnoise2_proj()
_build_fastnoise2_lib()

env_gdfastnoise2 = env.Clone()
env_gdfastnoise2.add_source_files(env.modules_sources, '*.cpp')

env_gdfastnoise2.Prepend(CPPATH=[".", "./FastNoise2/include/FastNoise", "./FastNoise2/include/FastSIMD"])
env.Append(LIBPATH=['FastNoise2/build/src'])
env.Append(LIBS=['FastNoise'])
